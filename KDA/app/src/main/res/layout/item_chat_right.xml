<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/black"
    android:orientation="vertical"
    android:padding="8dp">

    <LinearLayout
        android:id="@+id/rv_message"
        android:gravity="right"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_error"
            android:layout_width="15dp"
            android:visibility="gone"
            android:layout_height="15dp"
            android:layout_centerInParent="true"
            android:layout_marginLeft="2dp"
            android:layout_gravity="center"
            android:layout_toLeftOf="@id/tv_content"
            android:src="@drawable/ic_attention" />

        <TextView
            android:id="@+id/tv_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_gravity="right"
            android:layout_marginRight="5dp"
            android:background="@drawable/bg_itemchat_right"
            android:gravity="right"
            android:padding="8dp"
            android:text="ajhih do ngoc"
            android:textColor="@color/white"
            android:textSize="18sp" />



    </LinearLayout>

    <TextView
        android:id="@+id/tv_error"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/rv_message"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:text="Tin nhắn không thành công"
        android:textColor="@color/error_str"

        android:textSize="12sp"
        android:textStyle="italic" />

</RelativeLayout>